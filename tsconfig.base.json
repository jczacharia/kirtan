{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noErrorTruncation": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orchestra/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@orchestra/angular": ["libs/angular/src/index.ts"],
      "@orchestra/nestjs": ["libs/nestjs/src/index.ts"],
      "@orchestra/typeorm": ["libs/typeorm/src/index.ts"],
      "@orchestra/common": ["libs/common/src/index.ts"],
      "@orchestra/testing": ["libs/testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
